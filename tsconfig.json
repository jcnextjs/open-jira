{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@app/apis": ["apis/index.ts"],
            "@app/components/ui": ["components/ui/index.ts"],
            "@app/components/layouts": ["components/layouts/index.ts"],
            "@app/context/entries": ["context/entries/index.ts"],
            "@app/context/ui": ["context/ui/index.ts"],
            "@app/db": ["db/index.ts"],
            "@app/interfaces": ["interfaces/index.ts"],
            "@app/models": ["models/index.ts"],
            "@app/themes": ["themes/index.ts"],
            "@app/utils": ["utils/index.ts"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
